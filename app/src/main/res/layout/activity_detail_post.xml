<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailPost">

    <ImageView
        android:id="@+id/dataPictureDetail"

        android:layout_below="@+id/imageView"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/heartDetail"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/dataPictureDetail"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/commentDetail"
        android:layout_below="@+id/dataPictureDetail"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/heartDetail"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/shareDetail"
        android:layout_below="@+id/dataPictureDetail"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/commentDetail"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/threedotDetail"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/saveDetail"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/dataPictureDetail"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/captionDetail"
        android:layout_below="@+id/heartDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/timeDetail"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />
</RelativeLayout>